<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dataQuantity"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="1"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="192dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="生成             份     "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/dataQuantity"
        app:layout_constraintStart_toStartOf="@+id/dataQuantity"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/viewInstance"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="查看示例"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <Button
        android:id="@+id/cancelDialog"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="192dp"
        android:layout_marginEnd="8dp"
        android:text="取消"
        app:layout_constraintEnd_toStartOf="@+id/confirmDialog"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <Button
        android:id="@+id/confirmDialog"
        style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>